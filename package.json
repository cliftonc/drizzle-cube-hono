{
  "name": "drizzle-cube-hono",
  "version": "1.0.0",
  "description": "Example hono app https://try.drizzle-cube.dev",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "tsx watch src/index.ts",
    "dev:client": "cd client && npm run dev",
    "dev:full": "concurrently \"npm:dev:worker\" \"npm:dev:client\"",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "start": "node dist/index.js",
    "install:client": "cd client && npm install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:studio": "drizzle-kit studio",
    "setup": "npm run docker:up && sleep 5 && npm run db:generate && npm run db:migrate && npm run db:seed",
    "setup:neon": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "typecheck": "tsc --noEmit",
    "ci:all": "npm ci && cd client && npm ci"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "@neondatabase/serverless": "^1.0.1",
    "dotenv": "^17.2.1",
    "drizzle-cube": "^0.1.30",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.0.0",
    "postgres": "^3.4.0",
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "concurrently": "^9.0.0",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.4",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "lightningcss-linux-x64-gnu": "^1.30.0",
    "@rollup/rollup-linux-x64-gnu": "^4.24.0"
  },
  "keywords": [
    "analytics",
    "drizzle",
    "hono",
    "cube",
    "semantic-layer"
  ],
  "author": "Your Name",
  "license": "MIT"
}
